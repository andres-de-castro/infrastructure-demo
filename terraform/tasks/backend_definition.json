[
    {
        "name": "flask_backend",
        "image": "${image}",
        "portMappings": [
            {
                "containerPort": 80,
                "hostPort": 80
            }
        ],
        "memory": 300,
        "networkMode": "awsvpc",
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
                "awslogs-region": "us-east-1",
                "awslogs-group": "flask_backend",
                "awslogs-stream-prefix": "flask_backend"
            }
        },
        "environment": [
            {
                "name": "REDIS_URL",
                "value": "${redis_url}"
            },
            {
                "name": "production",
                "value": "true"
            }
        ]
    }
]